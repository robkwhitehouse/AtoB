<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buton_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/label_margin</item>
        <item name="android:layout_marginTop">@dimen/label_margin</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="value_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/label_margin</item>
        <item name="android:layout_marginTop">@dimen/label_margin</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/label_margin</item>
        <item name="android:layout_marginTop">@dimen/label_margin</item>
        <item name="android:layout_marginEnd">@dimen/label_margin</item>
        <item name="android:layout_marginBottom">@dimen/label_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>